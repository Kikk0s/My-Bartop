<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
    <include>./config.xml</include>
  <view name="system">
    <image name="background" extra="true">
      <color>00000070</color>
	  <zIndex>5</zIndex>
    </image>
    <video name="backgroundvideoFull" extra="true">
      <path>{random}</path>
      <origin>0.5 0.5</origin>
	  <pos>0.5 0.5</pos>
      <minSize>1 0.95</minSize>
      <delay>0</delay>
     <color>ffffffa0</color>
      <effect>none</effect>
      <zIndex>4</zIndex>
	  <default>./subsets/sfondi/novideo.mp4</default>
    </video>
	
    <video name="backgroundvideoFull" extra="true" ifHelpPrompts="false">
      <pos>0.5 0.5</pos>
      <minSize>1 1</minSize>
    </video>
	
    <image name="CenterFade" extra="true">
      <color>00000099</color>
    </image>
	
  </view>
</theme>